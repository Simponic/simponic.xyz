<main class="container">
  <%= if get_flash(@conn, :info) do %>
    <div class="alert alert-info">
      <p><%= get_flash(@conn, :info) %></p>
    </div>
  <% end %>
  <%= if get_flash(@conn, :error) do %>
    <div class="alert alert-error">
      <p><%= get_flash(@conn, :error) %></p>
    </div>
  <% end %>
  <%= @inner_content %>
</main>
